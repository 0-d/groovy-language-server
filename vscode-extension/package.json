{
  "name": "groovy",
  "displayName": "Groovy",
  "description": "Language support for Groovy",
  "version": "0.0.0-SNAPSHOT",
  "publisher": "prominic",
  "homepage": "https://github.com/prominic/groovy-language-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/prominic/groovy-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/prominic/groovy-language-server/issues"
  },
  "license": "Apache-2.0",
  "private": true,
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Groovy",
    "Grails"
  ],
  "main": "extension",
  "icon": "groovy.png",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "build": "mvn clean package",
    "build-debug": "mvn package"
  },
  "engines": {
    "vscode": "^1.34.0"
  },
  "devDependencies": {
    "@types/node": "^8.10.49",
    "ts-loader": "^6.0.3",
    "typescript": "^3.5.2",
    "vscode": "^1.1.34",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageclient": "^5.2.1",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "activationEvents": [
    "onLanguage:groovy",
    "onCommand:groovy.restartServer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "groovy",
        "extensions": [
          ".groovy"
        ],
        "aliases": [
          "Groovy"
        ]
      }
    ],
    "commands": [
      {
        "command": "groovy.restartServer",
        "title": "Restart Groovy language server",
        "category": "Groovy"
      }
    ],
    "configuration": {
      "type": "object",
      "description": "Groovy configuration",
      "properties": {
        "groovy.java.home": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JDK. Use this setting if the extension cannot find Java automatically."
        }
      }
    }
  }
}
